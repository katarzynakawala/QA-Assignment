{
	"name": "fdx-assignment",
	"version": "0.0.0",
	"license": "MIT",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"build": "ng build --prod",
		"test": "ng test",
		"test:unit": "ng test --watch=false --browsers=ChromeHeadless --exclude='**/contracts/**/*.spec.ts'",
		"test:contract": "ng test --watch=false --browsers=ChromeHeadless --include='**/contracts/**/*.spec.ts'",
		"test:allure": "rm -rf allure-results/* && ng test --karma-config=karma-allure.conf.js --watch=false --browsers=ChromeHeadless",
		"test:allure:report": "npm run test:allure && npm run allure:generate && npm run allure:open",
		"allure:generate": "allure generate allure-results --clean -o allure-report",
		"allure:open": "allure open allure-report",
		"allure:serve": "allure serve allure-results",
		"e2e": "playwright test",
		"e2e:headed": "playwright test --headed",
		"e2e:debug": "playwright test --debug",
		"e2e:report": "playwright show-report",
		"test:all": "npm run test:unit && npm run test:contract && npm run e2e",
		"lint": "eslint src/**/*.ts e2e/**/*.ts",
		"lint:fix": "eslint src/**/*.ts e2e/**/*.ts --fix"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "16.0.0",
		"@angular/common": "16.0.0",
		"@angular/compiler": "16.0.0",
		"@angular/core": "16.0.0",
		"@angular/forms": "16.0.0",
		"@angular/platform-browser": "16.0.0",
		"@angular/platform-browser-dynamic": "16.0.0",
		"@angular/router": "16.0.0",
		"core-js": "^3.30.2",
		"rxjs": "^7.8.1",
		"rxjs-compat": "^6.5.5",
		"tsify": "^5.0.4",
		"zone.js": "0.13.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^16.0.0",
		"@angular/cli": "^16.0.0",
		"@angular/compiler-cli": "16.0.0",
		"@angular/language-service": "16.0.0",
		"@eslint/js": "^9.37.0",
		"@playwright/test": "^1.55.1",
		"@types/jasmine": "^4.3.1",
		"@types/jasminewd2": "^2.0.8",
		"@types/node": "^20.19.19",
		"@typescript-eslint/eslint-plugin": "^8.45.0",
		"@typescript-eslint/parser": "^8.45.0",
		"allure-commandline": "^2.34.1",
		"allure-jasmine": "^3.4.1",
		"eslint": "^9.37.0",
		"jasmine-core": "^4.6.0",
		"jasmine-spec-reporter": "^7.0.0",
		"karma": "^6.4.2",
		"karma-allure-reporter": "^1.4.6",
		"karma-chrome-launcher": "~3.2.0",
		"karma-cli": "^2.0.0",
		"karma-coverage-istanbul-reporter": "^3.0.3",
		"karma-jasmine": "^5.1.0",
		"karma-jasmine-html-reporter": "^2.0.0",
		"mochawesome-merge": "^4.2.0",
		"ts-node": "~10.9.1",
		"typescript": "^5.0.4"
	}
}
